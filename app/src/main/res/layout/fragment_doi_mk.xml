<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEDFDF"
    tools:context=".fragment.DoiMkFragment">

    <TextView
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:background="#A3BA8D"
        android:gravity="center"
        android:text="ĐỔI MẬT KHẨU"
        android:textSize="40dp">

    </TextView>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="100dp">



            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/ed_doiMK_MKcu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="  Mật khẩu cũ"
                android:inputType="textPassword"
                android:background="#FAF6F6"></EditText>

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/ed_doiMK_MKmoi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="  Mật khẩu"
                android:inputType="textPassword"
                android:background="#FAF6F6"></EditText>

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/ed_doiMK_nhapLaiMK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="  Nhập lai mật khẩu"
                android:inputType="textPassword"
                android:background="#FAF6F6" ></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btn_doiMK_huy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hủy"
                android:backgroundTint="#358e9d"/>
            <Button
                android:id="@+id/btn_doiMK_doi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi"
                android:layout_marginLeft="60dp"
                android:backgroundTint="#358e9d"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>