<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:layout_width="278dp"
            android:layout_height="270dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logooooo" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_login_TK"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFE8E6"
                android:hint="  Tài khoản" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_login_MK"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#DFE8E6"
                android:hint="  Mật khẩu"
                android:inputType="textPassword" />


        <CheckBox
            android:id="@+id/chk_luuMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Lưu mật khẩu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login_huy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#358e9d"
                android:text="hủy" />

            <Button
                android:id="@+id/btn_login_dangNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:backgroundTint="#358e9d"
                android:text="Đăng nhập" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>